\@charset "UTF-8";
@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@1,900&display=swap");cx

a {
	text-decoration: none;
}

.container {
	height: 90vh;
	display: flex;
	justify-content: center;
	flex-direction: column;
	align-items: center;
}

.main-text {
	font-size: 150%;
	letter-spacing: 10px;
	font-family: "Roboto", sans-serif;
	text-shadow: -3px 0px 1px cyan, 3px 0px 1px red;
	text-transform: uppercase;
}

.list-inline {
	padding-left: 0px;
	list-style: none;
}

.list-inline-item {
	display: inline-block;
}

.list-inline-item img {
	height: 35px;
	width: 35px;
}

.list-inline-item:not(:last-child) {
	margin-right: 5px;
}

ul.social {
	margin-right: 13px;
}

ul.social a {
	opacity: 75%;
}

ul.social a:hover {
	opacity: 100%;
}

ul.social li:not(:last-child) {
	margin-right: 15px;
	display: inline;
}

@media screen and (max-width: 1100px) {
	.container {
		height: 75vh;
	}
}
